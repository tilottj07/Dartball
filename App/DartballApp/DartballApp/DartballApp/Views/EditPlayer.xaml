<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="DartballApp.Views.EditPlayer">
    <ContentPage.Content>

        <StackLayout>

            <Label Text="Name" FontSize="Large" />
            <Entry Placeholder="Name" Keyboard="Default" IsSpellCheckEnabled="false" BindingContext="{Binding Player.Name}"/>

            <Label Text="User Name" FontSize="Large" />
            <Entry Placeholder="User Name" Keyboard="Default" IsSpellCheckEnabled="false" BindingContext="{Binding Player.UserName}"/>

            <Label Text="Password" FontSize="Large" />
            <Entry Placeholder="Password" Keyboard="Default" IsSpellCheckEnabled="false" BindingContext="{Binding Player.Password}"/>

            <Label Text="Email Address" FontSize="Large" />
            <Entry Placeholder="Email" Keyboard="Email" IsSpellCheckEnabled="false" BindingContext="{Binding Player.EmailAddress}"/>


            <StackLayout HorizontalOptions="Center" VerticalOptions="End">
                <Button Text="Save" Clicked="Save"/>
            </StackLayout>

        </StackLayout>

    </ContentPage.Content>
</ContentPage>
