<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="DartballApp.Views.PlayerList">

    <ContentPage.Content>
   
        <ListView x:Name="PlayerInfos" ItemsSource="{Binding Players}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding UserName}" Tapped="GoToPlayerEdit" />
                </DataTemplate>
            </ListView.ItemTemplate>    
        </ListView>
    
    </ContentPage.Content>

    <StackLayout>
        <Button Text="Add Player" Clicked="GoToPlayerEdit"/>
    </StackLayout>

</ContentPage>

