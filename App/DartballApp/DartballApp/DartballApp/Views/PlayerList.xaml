<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="DartballApp.Views.PlayerList" Title="Players">

     
    
   <StackLayout>
        <ListView x:Name="PlayerListView" ItemsSource="{Binding Items}"  ItemSelected="GoToPlayerEdit">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout> 
                            <Label Text="{Binding Name}" FontAttributes="Bold"/>
                            <Label Text="{Binding UserName}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>    
        </ListView>
    </StackLayout>
   


</ContentPage>

